{
  "name": "stickystyle-claude-skills",
  "description": "A collection of Claude Code skills by Ryan Parrish",
  "version": "1.0.1",
  "author": {
    "name": "Ryan Parrish",
    "url": "https://github.com/stickystyle"
  },
  "repository": "https://github.com/stickystyle/claude-skills",
  "license": "MIT",
  "commands": [
    "./commands/aboutme-check.md",
    "./commands/aboutme-rebuild.md",
    "./commands/aboutme-stale.md"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/skills/aboutme-index/hooks/rebuild-index-on-start.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/skills/aboutme-index/hooks/update-aboutme-index.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
