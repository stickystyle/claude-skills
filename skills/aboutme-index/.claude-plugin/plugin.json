{
  "name": "aboutme-index",
  "description": "Index-based file discovery using ABOUTME headers",
  "version": "1.0.2",
  "author": {
    "name": "Ryan Parrish",
    "url": "https://github.com/stickystyle"
  },
  "repository": "https://github.com/stickystyle/claude-skills",
  "license": "MIT",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/rebuild-index-on-start.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/update-aboutme-index.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
